{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>DateYear</h1>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('date_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        <a href="{{ path('date_edit', { 'id': dateYear.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('date_delete', { 'id': dateYear.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this DateYear?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Start</th>
            <td>{{ dateYear.start }}</td>
            </tr>
            <tr>
                <th>Startcirca</th>
                <td>{% if dateYear.startCirca %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
            <td>{{ dateYear.end }}</td>
            </tr>
            <tr>
                <th>Endcirca</th>
                <td>{% if dateYear.endCirca %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if dateYear.created %}{{ dateYear.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if dateYear.updated %}{{ dateYear.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
