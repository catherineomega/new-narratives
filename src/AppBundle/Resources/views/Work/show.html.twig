{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Work</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('work_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('work_edit', { 'id': work.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('work_delete', { 'id': work.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Work?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ work.title }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    <a href='{{ path('work_category_show', {'id': work.workCategory.id}) }}'>
                        {{ work.workCategory }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Edition</th>
                <td>{{ work.edition }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ work.volume }}</td>
            </tr>
            <tr>
                <th>Contributions</th>
                <td>
                    {% if work.contributions|length > 0 %}
                        <ul>
                            {% for contribution in work.contributions %}
                                <li>
                                    <a href="{{ path('person_show', {'id': contribution.person.id}) }}">{{ contribution.person }}</a>, 
                                    <a href="{{ path('role_show', {'id': contribution.role.id}) }}">{{ contribution.role }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                    <a href="{{ path('work_contributions', {'id': work.id}) }}" class="pull-right">Edit contributions</a>
                </td>
            </tr>
            <tr>
                <th>Dates</th>
                <td>
                    {% if work.dates|length > 0 %}
                        <ul>
                            {% for dateYear in work.dates %}
                                <li>
                                    <a href="{{ path('date_category_show', {'id': dateYear.dateCategory.id}) }}">
                                        {{ dateYear.dateCategory}}
                                    </a>: {{ dateYear.value }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                    <a href="{{ path('work_dates', {'id': work.id}) }}" class="pull-right">Edit dates</a> 
                </td>
            </tr>
            <tr>
                <th>Publicationplace</th>
                <td>{{ work.publicationPlace }}</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>
                    <a href='{{ path('publisher_show', {'id': work.publisher.id}) }}'>
                        {{ work.publisher }}
                    </a>
                </td>
            </tr>              
            <tr>
                <th>Physicaldescription</th>
                <td>{{ work.physicalDescription }}</td>
            </tr>
            <tr>
                <th>Illustrations</th>
                <td>
                    {% if work.illustrations is null %}
                        Unknown
                    {% elseif work.illustrations %}
                        Yes
                    {% else %}
                        No
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Frontispiece</th>
                <td>
                    {% if work.frontispiece is null %}
                        Unknown
                    {% elseif work.frontispiece %}
                        Yes
                    {% else %}
                        No
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Translationdescription</th>
                <td>{{ work.translationDescription }}</td>
            </tr>
            <tr>
                <th>Dedication</th>
                <td>{{ work.dedication }}</td>
            </tr>
            <tr>
                <th>Worldcaturl</th>
                <td>
                    <a href='{{ work.worldcatUrl }}'>
                        {{ work.worldcatUrl }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>
                    {% if work.subjects|length > 0 %}
                        <ul>
                            {% for subject in work.subjects %}
                                <li>
                                    <a href='{{ path('subject_source_show', {'id': subject.subjectSource.id}) }}'>
                                        {{ subject.subjectSource }}
                                    </a> - 
                                    <a href='{{ path('subject_show', {'id': subject.id}) }}'>
                                        {{ subject }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>
                    {% if work.genre is not null %}
                    <a href='{{ path('genre_show', {'id': work.genre.id}) }}'>{{work.genre}}</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Transcription</th>
                <td>{% if work.transcription %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Physicallocations</th>
                <td>{{ work.physicalLocations }}</td>
            </tr>
            <tr>
                <th>Digitallocations</th>
                <td>{{ work.digitalLocations }}</td>
            </tr>
            <tr>
                <th>Digitalurl</th>
                <td>
                    <a href='{{ work.digitalUrl }}'>
                        {{ work.digitalUrl }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ work.notes }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>
                    {% if work.created %}{{ work.created|date('Y-m-d H:i:s') }}{% endif %}
                    {% if work.createdBy %} by {{ work.createdBy.fullname }}{% endif %}
                </td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>
                    Most recent update {% if work.updated %}{{ work.updated|date('Y-m-d H:i:s') }}{% endif %}.
                    {% if work.checkedBy|length > 0 %}
                        Checked by {% for user in work.checkedBy %}{{ user.fullname }}{% if not loop.last %}, {% endif %}{% endfor %}.
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

{% endblock %}
