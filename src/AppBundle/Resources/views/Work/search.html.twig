{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Work Search</h1>
    {% if works|length > 0 %}
        <p class="count">
            Displaying {{ works|length }} works of {{ works.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %} 

{% block body %}

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    <div id="controls" class="collapse">
        {{ form_rest(form) }}
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Search" class="btn btn-primary" />
            <a class="btn btn-primary" role="button" data-toggle="collapse" href="#controls" aria-expanded="false" aria-controls="collapseExample">Options</a>
            <a href="{{ path('work_search') }}" class="btn btn-danger">Reset</a>
            <a href="{{ path('work_index') }}" class="btn btn-warning">Cancel</a>
        </div>
    </div>
        
    {{ form_end(form) }}

    {% if works|length > 0 %}
        {% include 'AppBundle:Work:workList.html.twig' with {'works': works} %}
    {% endif %}

{% endblock %}
