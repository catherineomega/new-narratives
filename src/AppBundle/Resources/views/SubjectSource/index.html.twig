{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>SubjectSource List</h1>
    <p class="count">
        Displaying {{ subjectSources|length }} subjectSources of {{ subjectSources.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('subject_source_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('subject_source_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Label</th>
                <th>Created</th>
                <th>Updated</th>         
            </tr>
        </thead>
        <tbody>
            {% for subjectSource in subjectSources %}
                <tr>
                    <td>
                        <a href="{{ path('subject_source_show', { 'id': subjectSource.id }) }}">
                            {{ subjectSource.name }}
                        </a>
                    </td>
                    <td>{{ subjectSource.label }}</td>
                    <td>{{ subjectSource.created|date('Y-m-d H:i:s') }}</td>
                    <td>{{ subjectSource.updated|date('Y-m-d H:i:s') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(subjectSources) }}
    </div>

{% endblock %}
